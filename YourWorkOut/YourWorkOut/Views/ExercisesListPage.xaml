<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourWorkOut.Views.ExercisesListPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddExerciseClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>


    <ListView x:Name="listExercises" ItemSelected="OnExerciseSelected" 
              SeparatorVisibility="None"
              HasUnevenRows="True">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="20, 2" >
                        
                        <Label Text="{Binding Name}" HorizontalOptions="Center" FontSize="Medium" />
                        <Image Source="{Binding Image}" HorizontalOptions="Fill" Aspect="AspectFit" 
                               VerticalOptions="Fill"></Image>
                        <BoxView Color="Gray" WidthRequest="100" HeightRequest="1"></BoxView>
                        
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ListView>
</ContentPage>
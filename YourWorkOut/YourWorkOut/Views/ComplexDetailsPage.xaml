<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourWorkOut.Views.ExerciseComplexDetailPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSaveClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15">
            
            <Label Text="Name" FontSize="Small"></Label>
            <Entry Text="{Binding Item.Name}"></Entry>

            <Label Text="Timer per Exercise" FontSize="Small"></Label>
            <Picker x:Name="picDuration"></Picker>
            
            <Button Text="Start" Clicked="OnStartClicked" VerticalOptions="EndAndExpand" TextColor="White" BackgroundColor="ForestGreen"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
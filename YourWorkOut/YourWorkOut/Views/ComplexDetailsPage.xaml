<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourWorkOut.Views.ExerciseComplexDetailPage">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSaveClicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            
<!--            <Label Text="Name"></Label>-->
            <Entry Text="{Binding Item.Name}"></Entry>
            
            
            
            <Label Text="Default Timer"></Label>
            <Entry Text="{Binding Item.DurationTimeInSeconds}"></Entry>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>